trim_barcode: {
    label : Trim barcode sequences.
    value : true
    help : Barcode sequences should be in the sample sheet.
    visible: true
    display_type: CHECKBOX
    }

trim_primer: {
    label : Trim primer sequences.
    value : true
    help : Primer sequences should be in the sample sheet.
    visible: true
